import java.util.Random;

class AmbulanceSensor {
    private double soundLevel;
    private double distance;

    public AmbulanceSensor(double soundLevel, double distance) {
        this.soundLevel = soundLevel;
        this.distance = distance;
    }

    public boolean detectAmbulance() {
        return soundLevel > 80 && distance < 100;
    }

    public double getSoundLevel() { return soundLevel; }
    public double getDistance() { return distance; }
}

class TrafficController {
    public void handleAmbulanceDetected() {
        System.out.println("ðŸš¨ Ambulance detected! Turning traffic light GREEN...");
    }

    public void handleNoAmbulance() {
        System.out.println("âœ… No ambulance detected. Normal traffic flow.");
    }
}

public class AmbulanceSensorSystem {
    public static void main(String[] args) {
        Random random = new Random();
        TrafficController controller = new TrafficController();

        System.out.println("ðŸš¦ Ambulance Sensor System Simulation Started ðŸš¦\n");

        for (int i = 1; i <= 5; i++) {
            double sound = 60 + random.nextDouble() * 50;  // 60-110 dB
            double distance = random.nextDouble() * 200;   // 0-200 meters
            AmbulanceSensor sensor = new AmbulanceSensor(sound, distance);

            System.out.printf("ðŸ“¡ Sensor Reading %d:\n", i);
            System.out.printf("   Sound Level: %.2f dB\n", sensor.getSoundLevel());
            System.out.printf("   Distance: %.2f m\n", sensor.getDistance());

            if (sensor.detectAmbulance()) {
                controller.handleAmbulanceDetected();
            } else {
                controller.handleNoAmbulance();
            }

            System.out.println("-----------------------------");
            try { Thread.sleep(2000); } catch (InterruptedException e) {}
        }

        System.out.println("\nâœ… Simulation Complete. Traffic system is running normally.");
    }
}
